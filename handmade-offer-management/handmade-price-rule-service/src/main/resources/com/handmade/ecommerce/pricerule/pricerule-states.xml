<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="priceRuleFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="priceRuleSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="priceRuleApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="priceRuleRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="activate" newStateId="ACTIVE" componentName="priceRuleActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deactivate" newStateId="INACTIVE" componentName="priceRuleDeactivateAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="priceRuleDeprecateAction"/>
        </manual-state>

        <manual-state id="INACTIVE">
            <on eventId="activate" newStateId="ACTIVE" componentName="priceRuleReactivateAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="priceRuleDeprecateFromInactiveAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
