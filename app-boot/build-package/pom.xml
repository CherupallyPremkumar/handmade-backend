<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.handmade.ecommerce.build</groupId>
        <artifactId>build-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>build-package</artifactId>
    <packaging>jar</packaging>

    <properties>
    </properties>

    <dependencies>
        <!-- Spring Boot Starters -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!-- Database -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>

        <!-- Chenile Framework -->
        <dependency>
            <groupId>org.chenile</groupId>
            <artifactId>chenile-security</artifactId>
        </dependency>

        <!-- Core Domain Services -->
        <dependency>
            <groupId>com.handmade.ecommerce.user</groupId>
            <artifactId>user-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.customer</groupId>
            <artifactId>customer-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.product</groupId>
            <artifactId>product-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.variant</groupId>
            <artifactId>variant-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.inventory</groupId>
            <artifactId>inventory-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.order</groupId>
            <artifactId>order-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.orderline</groupId>
            <artifactId>orderline-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.payment</groupId>
            <artifactId>payment-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.cart</groupId>
            <artifactId>cart-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Seller & Artisan Management -->
        <dependency>
            <groupId>com.handmade.ecommerce.seller</groupId>
            <artifactId>seller-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.artisan</groupId>
            <artifactId>artisan-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Pricing & Promotions -->
        <dependency>
            <groupId>com.handmade.ecommerce.price</groupId>
            <artifactId>price-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.promotion</groupId>
            <artifactId>promotion-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Shipping & Fulfillment -->
        <dependency>
            <groupId>com.handmade.ecommerce.shipping</groupId>
            <artifactId>shipping-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Reviews & Ratings -->
        <dependency>
            <groupId>com.handmade.ecommerce.review</groupId>
            <artifactId>review-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Multi-tenancy -->
        <dependency>
            <groupId>com.handmade.ecommerce.tenant</groupId>
            <artifactId>tenant-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Newly Added Modules -->
        <dependency>
            <groupId>com.handmade.ecommerce</groupId>
            <artifactId>security-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce</groupId>
            <artifactId>commission-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.content</groupId>
            <artifactId>content-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.dispute</groupId>
            <artifactId>dispute-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.notification</groupId>
            <artifactId>notification-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.analytics</groupId>
            <artifactId>analytics-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.catalog</groupId>
            <artifactId>catalog-service</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- Common Library -->
        <dependency>
            <groupId>com.handmade.ecommerce.common</groupId>
            <artifactId>common-api</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce</groupId>
            <artifactId>storefront-api</artifactId>
            <version>${revision}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.handmade.ecommerce.build.HandMadeApplication</mainClass>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
