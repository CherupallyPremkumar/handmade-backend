            "description": "Standard US individual seller onboarding policy. Requires identity verification via Stripe Identity, tax interview via Stripe Tax (SSN/EIN), and bank account verification via Stripe Connect.",
            "regulatoryBasis": "IRS 1099-K reporting requirement (Form 1099-K for payments exceeding $600), FinCEN Customer Due Diligence (CDD) requirements under Bank Secrecy Act, Patriot Act KYC/AML compliance",
            "rules": [
                {
                    "id": "rule_us_ind_identity",
                    "stepName": "identity_verification",
                    "stepOrder": 1,
                    "required": true,
                    "providerType": "stripe_identity",
                    "providerConfig": {
                        "verification_type": "document",
                        "allowed_document_types": [
                            "passport",
                            "drivers_license",
                            "id_card"
                        ],
                        "require_liveness": false,
                        "country": "US"
                    },
                    "maxRetries": 3,
                    "retryDelayHours": 24,
                    "maxDurationDays": 7
                },
                {
                    "id": "rule_us_ind_tax",
                    "stepName": "tax_interview",
                    "stepOrder": 2,
                    "required": true,
                    "providerType": "stripe_tax",
                    "providerConfig": {
                        "require_ssn": true,
                        "require_ein": false,
                        "business_type": "individual",
                        "tax_form": "W9",
                        "1099k_threshold": 600
                    },
                    "maxRetries": 3,
                    "retryDelayHours": 24,
                    "maxDurationDays": 30
                },
                {
                    "id": "rule_us_ind_bank",
                    "stepName": "bank_verification",
                    "stepOrder": 3,
                    "required": true,
                    "providerType": "stripe_connect",
                    "providerConfig": {
                        "account_type": "individual",
                        "verification_method": "instant",
                        "require_routing_number": true,
                        "require_account_number": true
                    },
                    "maxRetries": 3,
                    "retryDelayHours": 24,
                    "maxDurationDays": 14
                }
            ]
        },
