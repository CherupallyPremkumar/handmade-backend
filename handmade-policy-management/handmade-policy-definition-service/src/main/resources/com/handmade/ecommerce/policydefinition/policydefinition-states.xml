<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="policyDefinitionFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="policyDefinitionSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="policyDefinitionApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="policyDefinitionRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="publish" newStateId="PUBLISHED" componentName="policyDefinitionPublishAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="policyDefinitionDeprecateAction"/>
            <on eventId="suspend" newStateId="SUSPENDED" componentName="policyDefinitionSuspendAction"/>
        </manual-state>

        <manual-state id="SUSPENDED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="policyDefinitionRepublishAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="policyDefinitionDeprecateFromSuspendedAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
