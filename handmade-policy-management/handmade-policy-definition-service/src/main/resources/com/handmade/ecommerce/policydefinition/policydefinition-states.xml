<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="approve" meta-bodyType="com.handmade.ecommerce.policy.dto.ApprovePolicyDefinitionPayload"/>
    <event-information eventId="deprecate" meta-bodyType="com.handmade.ecommerce.policy.dto.DeprecatePolicyDefinitionPayload"/>
    <event-information eventId="publish" meta-bodyType="com.handmade.ecommerce.policy.dto.PublishPolicyDefinitionPayload"/>
    <event-information eventId="reject" meta-bodyType="com.handmade.ecommerce.policy.dto.RejectPolicyDefinitionPayload"/>
    <event-information eventId="republish" meta-bodyType="com.handmade.ecommerce.policy.dto.RepublishPolicyDefinitionPayload"/>
    <event-information eventId="submit" meta-bodyType="com.handmade.ecommerce.policy.dto.SubmitPolicyDefinitionPayload"/>
    <event-information eventId="suspend" meta-bodyType="com.handmade.ecommerce.policy.dto.SuspendPolicyDefinitionPayload"/>

    <flow id="HM_POLICY_DEFINITION_FLOW" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="submitPolicyDefinitionAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="approvePolicyDefinitionAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="rejectPolicyDefinitionAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="publish" newStateId="PUBLISHED" componentName="publishPolicyDefinitionAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="deprecatePolicyDefinitionAction"/>
            <on eventId="suspend" newStateId="SUSPENDED" componentName="suspendPolicyDefinitionAction"/>
        </manual-state>

        <manual-state id="SUSPENDED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="republishPolicyDefinitionAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="deprecatePolicyDefinitionAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
