<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="limitCounterFlow" default="true">
        <manual-state id="ACTIVE" initialState="true">
            <on eventId="reset" newStateId="RESET" componentName="limitCounterResetAction"/>
            <on eventId="breach" newStateId="BREACHED" componentName="limitCounterBreachAction"/>
        </manual-state>

        <manual-state id="RESET">
            <on eventId="activate" newStateId="ACTIVE" componentName="limitCounterActivateAction"/>
        </manual-state>

        <manual-state id="BREACHED">
            <on eventId="reset" newStateId="RESET" componentName="limitCounterResetFromBreachAction"/>
        </manual-state>
    </flow>
</states>
