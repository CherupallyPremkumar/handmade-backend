<?xml version="1.0" encoding="UTF-8"?>
<states>
    <!-- Limit Definition Lifecycle -->
    <flow id="limitDefinitionFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="activate" newStateId="ACTIVE" componentName="limitActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="pause" newStateId="PAUSED" componentName="limitPauseAction"/>
            <on eventId="archive" newStateId="ARCHIVED" componentName="limitArchiveAction"/>
        </manual-state>

        <manual-state id="PAUSED">
            <on eventId="resume" newStateId="ACTIVE" componentName="limitResumeAction"/>
            <on eventId="archive" newStateId="ARCHIVED" componentName="limitArchiveAction"/>
        </manual-state>

        <manual-state id="ARCHIVED" meta-endState="true"/>
    </flow>
</states>