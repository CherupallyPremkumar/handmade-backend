<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="couponFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="couponSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="couponApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="couponRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="activate" newStateId="ACTIVE" componentName="couponActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="pause" newStateId="PAUSED" componentName="couponPauseAction"/>
            <on eventId="expire" newStateId="EXPIRED" componentName="couponExpireAction"/>
            <on eventId="deactivate" newStateId="INACTIVE" componentName="couponDeactivateAction"/>
        </manual-state>

        <manual-state id="PAUSED">
            <on eventId="resume" newStateId="ACTIVE" componentName="couponResumeAction"/>
            <on eventId="deactivate" newStateId="INACTIVE" componentName="couponDeactivateFromPausedAction"/>
        </manual-state>

        <manual-state id="EXPIRED" meta-endState="true"/>
        <manual-state id="INACTIVE" meta-endState="true"/>
    </flow>
</states>
