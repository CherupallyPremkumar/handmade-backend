<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="search-categories">
    
    <!-- Distinct Category Query (using classification_id as proxy for now) -->
    <select id="search-categories" resultType="String">
        SELECT DISTINCT classification_id
        FROM hm_product
        WHERE classification_id IS NOT NULL
        ORDER BY classification_id ASC
    </select>
</mapper>
