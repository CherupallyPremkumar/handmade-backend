<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-feature-config-table" author="platform-team">
        <comment>Create hm_platform_feature_config table for managing platform feature flags</comment>
        
        <createTable tableName="hm_platform_feature_config" schemaName="public">
            <!-- Primary Key -->
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <!-- Platform Reference -->
            <column name="platform_id" type="VARCHAR(255)"/>
            
            <!-- Feature Flags -->
            <column name="is_seller_registration_open" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_checkout_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_guest_checkout_allowed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            
            <!-- JSON Configuration (for extensibility) -->
            <column name="config_json" type="VARCHAR(255)"/>
            
            <!-- Multi-tenancy -->
            <column name="tenant" type="VARCHAR(255)"/>
            
            <!-- Audit Fields -->
            <column name="created_time" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Indexes -->
        <createIndex indexName="idx_feature_config_platform" tableName="hm_platform_feature_config">
            <column name="platform_id"/>
        </createIndex>
        
        <createIndex indexName="idx_feature_config_tenant" tableName="hm_platform_feature_config">
            <column name="tenant"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="hm_platform_feature_config" schemaName="public"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
