<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-commission-policy-table" author="platform-team">
        <comment>Create commission_policy table for managing platform commission rates</comment>
        
        <createTable tableName="commission_policy" schemaName="public">
            <!-- Primary Key -->
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <!-- Policy Information -->
            <column name="policy_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN"/>
            
            <!-- Effective Dates -->
            <column name="effective_from" type="TIMESTAMP"/>
            <column name="effective_to" type="TIMESTAMP"/>
            
            <!-- Commission Rates (stored as decimal with 4 decimal places for percentage) -->
            <column name="base_commission_rate" type="DECIMAL(5,4)"/>
            <column name="processing_fee_rate" type="DECIMAL(5,4)"/>
            
            <!-- Seller Type Specific Rates -->
            <column name="artisan_rate" type="DECIMAL(5,4)"/>
            <column name="home_maker_rate" type="DECIMAL(5,4)"/>
            <column name="small_business_rate" type="DECIMAL(5,4)"/>
            <column name="enterprise_rate" type="DECIMAL(5,4)"/>
            
            <!-- Volume Discounts -->
            <column name="high_volume_threshold" type="DECIMAL(15,2)"/>
            <column name="high_volume_discount" type="DECIMAL(5,4)"/>
            
            <!-- Multi-tenancy -->
            <column name="tenant" type="VARCHAR(255)"/>
            
            <!-- Audit Fields -->
            <column name="created_time" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Indexes -->
        <createIndex indexName="idx_commission_policy_active" tableName="commission_policy">
            <column name="is_active"/>
        </createIndex>
        
        <createIndex indexName="idx_commission_policy_effective" tableName="commission_policy">
            <column name="effective_from"/>
            <column name="effective_to"/>
        </createIndex>
        
        <createIndex indexName="idx_commission_policy_tenant" tableName="commission_policy">
            <column name="tenant"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="commission_policy" schemaName="public"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
