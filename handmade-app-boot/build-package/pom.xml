<?xml version='1.0' encoding='UTF-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.handmade.ecommerce.build</groupId>
        <artifactId>build-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>build-package</artifactId>
    <name>build-package</name><packaging>jar</packaging>

    <properties>
    </properties>

    <dependencies>
        
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.handmade.ecommerce</groupId>
            <artifactId>handmade-query-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.platform</groupId>
            <artifactId>handmade-platform-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce</groupId>
            <artifactId>liquibase-changelogs</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.product</groupId>
            <artifactId>handmade-product-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.catalog</groupId>
            <artifactId>handmade-catalog-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.seller</groupId>
            <artifactId>handmade-seller-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.onboarding</groupId>
            <artifactId>handmade-onboarding-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.orchestration</groupId>
            <artifactId>handmade-product-orchestration-service</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.handmade.ecommerce.orchestration</groupId>
            <artifactId>handmade-seller-orchestration-service</artifactId>
            <version>${revision}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.handmade.ecommerce.build.HandMadeApplication</mainClass>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>