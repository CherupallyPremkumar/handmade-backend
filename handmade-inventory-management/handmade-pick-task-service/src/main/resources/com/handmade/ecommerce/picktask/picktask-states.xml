<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="pickTaskFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="start" newStateId="IN_PROGRESS" componentName="pickTaskStartAction"/>
        </manual-state>

        <manual-state id="IN_PROGRESS">
            <on eventId="complete" newStateId="COMPLETED" componentName="pickTaskCompleteAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="pickTaskCancelAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
