<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="inventoryReservationFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="confirm" newStateId="CONFIRMED" componentName="inventoryReservationConfirmAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="inventoryReservationCancelAction"/>
        </manual-state>

        <manual-state id="CONFIRMED">
            <on eventId="fulfill" newStateId="FULFILLED" componentName="inventoryReservationFulfillAction"/>
            <on eventId="expire" newStateId="EXPIRED" componentName="inventoryReservationExpireAction"/>
        </manual-state>

        <manual-state id="FULFILLED" meta-endState="true"/>
        <manual-state id="EXPIRED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
