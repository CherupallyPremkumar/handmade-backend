<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="damage" meta-bodyType="com.handmade.ecommerce.inventory.dto.DamageInboundShipmentItemPayload"/>
    <event-information eventId="receive" meta-bodyType="com.handmade.ecommerce.inventory.dto.ReceiveInboundShipmentItemPayload"/>

    <flow id="HM_INBOUND_SHIPMENT_ITEM_FLOW" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="receive" newStateId="RECEIVED" componentName="com.handmade.ecommerce.inboundshipmentitem.service.cmds.ReceiveInboundShipmentItemAction"/>
            <on eventId="damage" newStateId="DAMAGED" componentName="com.handmade.ecommerce.inboundshipmentitem.service.cmds.DamageInboundShipmentItemAction"/>
        </manual-state>

        <manual-state id="RECEIVED" meta-endState="true"/>
        <manual-state id="DAMAGED" meta-endState="true"/>
    </flow>
</states>
