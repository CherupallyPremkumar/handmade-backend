<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="sellerAccountFlow" default="true">
        <manual-state id="REGISTERED" initialState="true">
            <on eventId="verify" newStateId="VERIFIED" componentName="sellerAccountVerifyAction"/>
        </manual-state>

        <manual-state id="VERIFIED">
            <on eventId="activate" newStateId="ACTIVE" componentName="sellerAccountActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="suspend" newStateId="SUSPENDED" componentName="sellerAccountSuspendAction"/>
            <on eventId="deactivate" newStateId="INACTIVE" componentName="sellerAccountDeactivateAction"/>
        </manual-state>

        <manual-state id="SUSPENDED">
            <on eventId="reactivate" newStateId="ACTIVE" componentName="sellerAccountReactivateAction"/>
            <on eventId="deactivate" newStateId="INACTIVE" componentName="sellerAccountDeactivateFromSuspendedAction"/>
        </manual-state>

        <manual-state id="INACTIVE">
            <on eventId="close" newStateId="CLOSED" componentName="sellerAccountCloseAction"/>
        </manual-state>

        <manual-state id="CLOSED" meta-endState="true"/>
    </flow>
</states>
