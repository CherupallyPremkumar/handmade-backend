<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="settlementBatchFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="settlementBatchProcessAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="settlementBatchCompleteAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="settlementBatchFailAction"/>
        </manual-state>

        <manual-state id="FAILED">
            <on eventId="retry" newStateId="PENDING" componentName="settlementBatchRetryAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="settlementBatchCancelAction"/>
        </manual-state>

        <manual-state id="COMPLETED">
            <on eventId="reconcile" newStateId="RECONCILED" componentName="settlementBatchReconcileAction"/>
        </manual-state>

        <manual-state id="RECONCILED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
