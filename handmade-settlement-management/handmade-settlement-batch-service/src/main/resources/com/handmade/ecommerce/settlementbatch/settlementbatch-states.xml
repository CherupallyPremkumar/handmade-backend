<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="cancel" meta-bodyType="com.handmade.ecommerce.settlement.dto.CancelSettlementBatchPayload"/>
    <event-information eventId="complete" meta-bodyType="com.handmade.ecommerce.settlement.dto.CompleteSettlementBatchPayload"/>
    <event-information eventId="fail" meta-bodyType="com.handmade.ecommerce.settlement.dto.FailSettlementBatchPayload"/>
    <event-information eventId="process" meta-bodyType="com.handmade.ecommerce.settlement.dto.ProcessSettlementBatchPayload"/>
    <event-information eventId="reconcile" meta-bodyType="com.handmade.ecommerce.settlement.dto.ReconcileSettlementBatchPayload"/>
    <event-information eventId="retry" meta-bodyType="com.handmade.ecommerce.settlement.dto.RetrySettlementBatchPayload"/>

    <flow id="settlementBatchFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.ProcessSettlementBatchAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.CompleteSettlementBatchAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.FailSettlementBatchAction"/>
        </manual-state>

        <manual-state id="FAILED">
            <on eventId="retry" newStateId="PENDING" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.RetrySettlementBatchAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.CancelSettlementBatchAction"/>
        </manual-state>

        <manual-state id="COMPLETED">
            <on eventId="reconcile" newStateId="RECONCILED" componentName="com.handmade.ecommerce.settlementbatch.service.cmds.ReconcileSettlementBatchAction"/>
        </manual-state>

        <manual-state id="RECONCILED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
