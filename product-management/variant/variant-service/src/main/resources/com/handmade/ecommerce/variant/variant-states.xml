<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="productVariantFlow" default="true">
        <entry-action componentName="productVariantEntryAction" />
        <exit-action componentName="productVariantExitAction" />

        <manual-state id="DRAFT" initialState="true">
            <on eventId="addPrice" componentName="addVariantPriceService" newStateId="DRAFT"/>
            <on eventId="activate" componentName="activateProductVariantInCreatedService" newStateId="ACTIVE" />
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deactivate" componentName="deactivateProductVariantService" newStateId="INACTIVE" />
            <on eventId="discontinue" componentName="discontinueProductVariantInActiveService" newStateId="DISCONTINUED" />
        </manual-state>

        <manual-state id="INACTIVE">
            <on eventId="activate" componentName="activateProductVariantInInActiveService" newStateId="ACTIVE" />
            <on eventId="discontinue" componentName="discontinueProductVariantService" newStateId="DISCONTINUED" />
        </manual-state>
        <manual-state id="DISCONTINUED" />
    </flow>
</states>
