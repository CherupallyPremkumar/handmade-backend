<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="answer" meta-bodyType="com.handmade.ecommerce.qa.dto.AnswerProductQuestionPayload"/>
    <event-information eventId="approve" meta-bodyType="com.handmade.ecommerce.qa.dto.ApproveProductQuestionPayload"/>
    <event-information eventId="close" meta-bodyType="com.handmade.ecommerce.qa.dto.CloseProductQuestionPayload"/>
    <event-information eventId="publish" meta-bodyType="com.handmade.ecommerce.qa.dto.PublishProductQuestionPayload"/>
    <event-information eventId="reject" meta-bodyType="com.handmade.ecommerce.qa.dto.RejectProductQuestionPayload"/>
    <event-information eventId="republish" meta-bodyType="com.handmade.ecommerce.qa.dto.RepublishProductQuestionPayload"/>
    <event-information eventId="review" meta-bodyType="com.handmade.ecommerce.qa.dto.ReviewProductQuestionPayload"/>
    <event-information eventId="unpublish" meta-bodyType="com.handmade.ecommerce.qa.dto.UnpublishProductQuestionPayload"/>

    <flow id="productQuestionFlow" default="true">
        <manual-state id="SUBMITTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="com.handmade.ecommerce.productquestion.service.cmds.ReviewProductQuestionAction"/>
            <on eventId="publish" newStateId="PUBLISHED" componentName="com.handmade.ecommerce.productquestion.service.cmds.PublishProductQuestionAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="approve" newStateId="PUBLISHED" componentName="com.handmade.ecommerce.productquestion.service.cmds.ApproveProductQuestionAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="com.handmade.ecommerce.productquestion.service.cmds.RejectProductQuestionAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="answer" newStateId="ANSWERED" componentName="com.handmade.ecommerce.productquestion.service.cmds.AnswerProductQuestionAction"/>
            <on eventId="unpublish" newStateId="UNPUBLISHED" componentName="com.handmade.ecommerce.productquestion.service.cmds.UnpublishProductQuestionAction"/>
        </manual-state>

        <manual-state id="ANSWERED">
            <on eventId="close" newStateId="CLOSED" componentName="com.handmade.ecommerce.productquestion.service.cmds.CloseProductQuestionAction"/>
        </manual-state>

        <manual-state id="UNPUBLISHED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="com.handmade.ecommerce.productquestion.service.cmds.RepublishProductQuestionAction"/>
        </manual-state>

        <manual-state id="CLOSED" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
    </flow>
</states>
