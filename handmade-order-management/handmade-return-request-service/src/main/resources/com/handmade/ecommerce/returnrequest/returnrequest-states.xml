<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="returnRequestFlow" default="true">
        <manual-state id="SUBMITTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="returnRequestReviewAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="returnRequestCancelAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="returnRequestApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="returnRequestRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="ship" newStateId="IN_TRANSIT" componentName="returnRequestShipAction"/>
        </manual-state>

        <manual-state id="IN_TRANSIT">
            <on eventId="receive" newStateId="RECEIVED" componentName="returnRequestReceiveAction"/>
        </manual-state>

        <manual-state id="RECEIVED">
            <on eventId="inspect" newStateId="INSPECTED" componentName="returnRequestInspectAction"/>
        </manual-state>

        <manual-state id="INSPECTED">
            <on eventId="accept" newStateId="ACCEPTED" componentName="returnRequestAcceptAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="returnRequestRejectAfterInspectionAction"/>
        </manual-state>

        <manual-state id="ACCEPTED">
            <on eventId="refund" newStateId="REFUNDED" componentName="returnRequestRefundAction"/>
        </manual-state>

        <manual-state id="REFUNDED" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
