<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="notificationLogFlow" default="true">
        <manual-state id="SENT" initialState="true">
            <on eventId="deliver" newStateId="DELIVERED" componentName="notificationLogDeliverAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="notificationLogFailAction"/>
            <on eventId="bounce" newStateId="BOUNCED" componentName="notificationLogBounceAction"/>
        </manual-state>

        <manual-state id="DELIVERED">
            <on eventId="open" newStateId="OPENED" componentName="notificationLogOpenAction"/>
            <on eventId="click" newStateId="CLICKED" componentName="notificationLogClickAction"/>
        </manual-state>

        <manual-state id="OPENED">
            <on eventId="click" newStateId="CLICKED" componentName="notificationLogClickFromOpenedAction"/>
        </manual-state>

        <manual-state id="CLICKED" meta-endState="true"/>
        <manual-state id="FAILED" meta-endState="true"/>
        <manual-state id="BOUNCED" meta-endState="true"/>
    </flow>
</states>
