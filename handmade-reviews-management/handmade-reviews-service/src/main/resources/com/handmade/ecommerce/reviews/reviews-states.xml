<?xml version="1.0" encoding="UTF-8"?>
<states>
    <!-- Product Review Moderation Lifecycle -->
    <flow id="productReviewFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="approve" newStateId="APPROVED" componentName="reviewApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="reviewRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED" meta-endState="true">
            <on eventId="archive" newStateId="ARCHIVED" componentName="reviewArchiveAction"/>
        </manual-state>

        <manual-state id="REJECTED" meta-endState="true">
            <on eventId="appeal" newStateId="APPEAL_REVIEW" componentName="reviewAppealAction"/>
        </manual-state>

        <manual-state id="APPEAL_REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="reviewApproveAction"/>
            <on eventId="sustainRejection" newStateId="REJECTED" componentName="reviewRejectAction"/>
        </manual-state>

        <manual-state id="ARCHIVED" meta-endState="true"/>
    </flow>
</states>
