<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="financialTransactionFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="com.handmade.ecommerce.financialtransaction.service.cmds.ProcessFinancialTransactionAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="com.handmade.ecommerce.financialtransaction.service.cmds.CompleteFinancialTransactionAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="com.handmade.ecommerce.financialtransaction.service.cmds.FailFinancialTransactionAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="FAILED" meta-endState="true"/>
    </flow>
</states>
