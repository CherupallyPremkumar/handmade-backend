<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homebase.admin.mapper.PaymentMapper">

    <resultMap id="paymentResultMap" type="com.homebase.admin.entity.Payment">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="transactionId" column="transaction_id"/>
        <result property="amount" column="amount"/>
        <result property="paymentMethod" column="payment_method"/>
        <result property="status" column="status"/>
        <result property="tenantId" column="tenant_id"/>
    </resultMap>

    <select id="findByOrderIdAndTenantId" resultMap="paymentResultMap">
        SELECT * FROM payments WHERE order_id = #{orderId} AND tenant_id = #{tenantId}
    </select>

    <select id="findByIdAndTenantId" resultMap="paymentResultMap">
        SELECT * FROM payments WHERE id = #{id} AND tenant_id = #{tenantId}
    </select>

    <select id="findByTransactionIdAndTenantId" resultMap="paymentResultMap">
        SELECT * FROM payments WHERE transaction_id = #{transactionId} AND tenant_id = #{tenantId}
    </select>

    <select id="findByStatusAndTenantId" resultMap="paymentResultMap">
        SELECT * FROM payments WHERE status = #{status} AND tenant_id = #{tenantId} ORDER BY created_at DESC
    </select>

    <select id="getTotalSuccessfulPayments" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(amount), 0) FROM payments WHERE status = 'SUCCESS' AND tenant_id = #{tenantId}
    </select>

    <select id="countFailedPayments" resultType="long">
        SELECT COUNT(*) FROM payments WHERE status = 'FAILED' AND tenant_id = #{tenantId}
    </select>

</mapper>
