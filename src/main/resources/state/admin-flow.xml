<states>
    <flow id="admin-flow" default="true">
        <entry-action componentName="adminEntryAction" />
        <exit-action componentName="adminExitAction" />

        <manual-state id="CREATED" initialState="true">
            <on eventId="activate" componentName="activateAdminInCreatedService" newStateId="ACTIVE" />
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deactivate" componentName="deactivateAdminService" newStateId="INACTIVE" />
            <on eventId="suspend" componentName="suspendAdminService" newStateId="SUSPENDED" />
        </manual-state>

        <manual-state id="INACTIVE">
            <on eventId="activate" componentName="activateAdminInInActiveService" newStateId="ACTIVE" />
        </manual-state>

        <manual-state id="SUSPENDED">
            <on eventId="activate" componentName="activateAdminInInSuspendService" newStateId="ACTIVE" />
        </manual-state>
    </flow>
</states>
