<?xml version="1.0" encoding="UTF-8"?>
<states>

    <flow id="orderFlow" default="true">
        <entry-action componentName="orderEntryAction" />
        <exit-action componentName="orderExitAction" />

        <manual-state id="NEW" initialState="true">
            <on eventId="validate" newStateId="VALIDATED" />
            <on eventId="reject" newStateId="REJECTED" />
        </manual-state>

        <manual-state id="VALIDATED">
            <on eventId="approve" newStateId="APPROVED" />
            <on eventId="hold" newStateId="ON_HOLD" />
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="fulfill" newStateId="FULFILLED" />
        </manual-state>

        <manual-state id="ON_HOLD">
            <on eventId="approve" newStateId="APPROVED" />
            <on eventId="cancel" newStateId="CANCELLED" />
        </manual-state>

        <manual-state id="REJECTED" />
        <manual-state id="FULFILLED" />
        <manual-state id="CANCELLED" />
    </flow>

</states>