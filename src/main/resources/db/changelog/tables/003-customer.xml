<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-customer-table" author="system">
        <createTable tableName="hm_customer">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(1000)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="pincode" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="order_count" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="total_spent" type="DECIMAL(10,2)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="state_id" type="VARCHAR(255)"/>
            <column name="flow_id" type="VARCHAR(255)"/>
            <column name="state_entry_time" type="TIMESTAMP"/>
            <column name="sla_red_date" type="TIMESTAMP"/>
            <column name="sla_yellow_date" type="TIMESTAMP"/>
            <column name="sla_late" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="sla_tending_late" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="TIMESTAMP"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-customer-roles-table" author="system">
        <createTable tableName="customer_roles">
            <column name="customer_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="customer_roles"
                baseColumnNames="customer_id"
                constraintName="fk_customer_roles_customer"
                referencedTableName="hm_customer"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="003-create-address-table" author="system">
        <createTable tableName="hm_address">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant" type="VARCHAR(255)"/>
            <column name="customer_id" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="zip_code" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="TIMESTAMP"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
