<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-price-table" author="system">
        <createTable tableName="hm_price">

            <!-- Primary Key -->
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant info -->
            <column name="tenant" type="VARCHAR(255)"/>
            <column name="sub_tenant_id" type="VARCHAR(255)"/>

            <!-- Product and Price details -->
            <column name="product_variant_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_percentage" type="DECIMAL(5,2)" defaultValueNumeric="0.00"/>
            <column name="sale_amount" type="DECIMAL(10,2)"/>

            <!-- State Machine (STM) tracking -->
            <column name="state_id" type="VARCHAR(255)"/>
            <column name="flow_id" type="VARCHAR(255)"/>
            <column name="state_entry_time" type="TIMESTAMP"/>
            <column name="sla_red_date" type="TIMESTAMP"/>
            <column name="sla_yellow_date" type="TIMESTAMP"/>
            <column name="sla_late" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="sla_tending_late" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <!-- Audit columns -->
            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>

        </createTable>

        <!-- Optional: Useful index for lookups -->
        <createIndex tableName="hm_price" indexName="idx_price_product_variant">
            <column name="product_variant_id"/>
        </createIndex>

        <createIndex tableName="hm_price" indexName="idx_price_tenant">
            <column name="tenant"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>