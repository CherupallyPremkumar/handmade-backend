<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="auditProcessFlow" default="true">
        <manual-state id="INITIATED" initialState="true">
            <on eventId="start" newStateId="IN_PROGRESS" componentName="auditProcessStartAction"/>
        </manual-state>

        <manual-state id="IN_PROGRESS">
            <on eventId="complete" newStateId="COMPLETED" componentName="auditProcessCompleteAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="auditProcessFailAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="FAILED" meta-endState="true"/>
    </flow>
</states>
