<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="sellerOnboardingStepFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="start" newStateId="IN_PROGRESS" componentName="sellerOnboardingStepStartAction"/>
            <on eventId="skip" newStateId="SKIPPED" componentName="sellerOnboardingStepSkipAction"/>
        </manual-state>

        <manual-state id="IN_PROGRESS">
            <on eventId="complete" newStateId="COMPLETED" componentName="sellerOnboardingStepCompleteAction"/>
            <on eventId="skip" newStateId="SKIPPED" componentName="sellerOnboardingStepSkipFromProgressAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="SKIPPED" meta-endState="true"/>
    </flow>
</states>
