<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="riskSignalFlow" default="true">
        <manual-state id="DETECTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="riskSignalReviewAction"/>
            <on eventId="dismiss" newStateId="DISMISSED" componentName="riskSignalDismissAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="confirm" newStateId="CONFIRMED" componentName="riskSignalConfirmAction"/>
            <on eventId="dismiss" newStateId="DISMISSED" componentName="riskSignalDismissFromReviewAction"/>
        </manual-state>

        <manual-state id="CONFIRMED">
            <on eventId="escalate" newStateId="ESCALATED" componentName="riskSignalEscalateAction"/>
            <on eventId="mitigate" newStateId="MITIGATED" componentName="riskSignalMitigateAction"/>
        </manual-state>

        <manual-state id="ESCALATED">
            <on eventId="mitigate" newStateId="MITIGATED" componentName="riskSignalMitigateFromEscalatedAction"/>
        </manual-state>

        <manual-state id="MITIGATED" meta-endState="true"/>
        <manual-state id="DISMISSED" meta-endState="true"/>
    </flow>
</states>