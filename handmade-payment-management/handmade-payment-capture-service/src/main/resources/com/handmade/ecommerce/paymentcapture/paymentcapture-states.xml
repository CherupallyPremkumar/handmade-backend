<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="paymentCaptureFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="paymentCaptureProcessAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="paymentCaptureCancelAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="succeed" newStateId="SUCCESS" componentName="paymentCaptureSucceedAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="paymentCaptureFailAction"/>
        </manual-state>

        <manual-state id="FAILED">
            <on eventId="retry" newStateId="PENDING" componentName="paymentCaptureRetryAction"/>
        </manual-state>

        <manual-state id="SUCCESS" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
