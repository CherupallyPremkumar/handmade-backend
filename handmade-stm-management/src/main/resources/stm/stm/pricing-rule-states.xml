<?xml version="1.0" encoding="UTF-8"?>
<states>
    <!-- Pricing Rule Lifecycle -->
    <flow id="pricingRuleFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="activate" newStateId="ACTIVE" componentName="ruleActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="pause" newStateId="PAUSED" componentName="rulePauseAction"/>
            <on eventId="archive" newStateId="ARCHIVED" componentName="ruleArchiveAction"/>
        </manual-state>

        <manual-state id="PAUSED">
            <on eventId="resume" newStateId="ACTIVE" componentName="ruleResumeAction"/>
            <on eventId="archive" newStateId="ARCHIVED" componentName="ruleArchiveAction"/>
        </manual-state>

        <manual-state id="ARCHIVED" meta-endState="true"/>
    </flow>
</states>
