<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="complianceDocumentFlow" default="true">
        <manual-state id="SUBMITTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="complianceDocumentReviewAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="complianceDocumentApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="complianceDocumentRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="expire" newStateId="EXPIRED" componentName="complianceDocumentExpireAction"/>
            <on eventId="revoke" newStateId="REVOKED" componentName="complianceDocumentRevokeAction"/>
        </manual-state>

        <manual-state id="EXPIRED">
            <on eventId="renew" newStateId="SUBMITTED" componentName="complianceDocumentRenewAction"/>
        </manual-state>

        <manual-state id="REJECTED" meta-endState="true"/>
        <manual-state id="REVOKED" meta-endState="true"/>
    </flow>
</states>
