<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="sellerConversationFlow" default="true">
        <manual-state id="OPEN" initialState="true">
            <on eventId="assign" newStateId="ASSIGNED" componentName="sellerConversationAssignAction"/>
            <on eventId="close" newStateId="CLOSED" componentName="sellerConversationCloseAction"/>
        </manual-state>

        <manual-state id="ASSIGNED">
            <on eventId="respond" newStateId="AWAITING_CUSTOMER" componentName="sellerConversationRespondAction"/>
            <on eventId="escalate" newStateId="ESCALATED" componentName="sellerConversationEscalateAction"/>
            <on eventId="close" newStateId="CLOSED" componentName="sellerConversationCloseFromAssignedAction"/>
        </manual-state>

        <manual-state id="AWAITING_CUSTOMER">
            <on eventId="customerReply" newStateId="ASSIGNED" componentName="sellerConversationCustomerReplyAction"/>
            <on eventId="close" newStateId="CLOSED" componentName="sellerConversationCloseFromAwaitingAction"/>
        </manual-state>

        <manual-state id="ESCALATED">
            <on eventId="resolve" newStateId="ASSIGNED" componentName="sellerConversationResolveEscalationAction"/>
            <on eventId="close" newStateId="CLOSED" componentName="sellerConversationCloseFromEscalatedAction"/>
        </manual-state>

        <manual-state id="CLOSED" meta-endState="true">
            <on eventId="reopen" newStateId="OPEN" componentName="sellerConversationReopenAction"/>
        </manual-state>
    </flow>
</states>
