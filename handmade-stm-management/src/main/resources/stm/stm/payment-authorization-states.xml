<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="HM_PAYMENT_AUTHORIZATION_FLOW" default="true">
        <manual-state id="AUTHORIZED" initialState="true">
            <on eventId="capture" newStateId="CAPTURED" componentName="paymentAuthorizationCaptureAction"/>
            <on eventId="void" newStateId="VOIDED" componentName="paymentAuthorizationVoidAction"/>
            <on eventId="expire" newStateId="EXPIRED" componentName="paymentAuthorizationExpireAction"/>
        </manual-state>

        <manual-state id="CAPTURED" meta-endState="true"/>
        <manual-state id="VOIDED" meta-endState="true"/>
        <manual-state id="EXPIRED" meta-endState="true"/>
    </flow>
</states>
