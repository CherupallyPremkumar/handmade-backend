<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="deliveryExceptionFlow" default="true">
        <manual-state id="REPORTED" initialState="true">
            <on eventId="acknowledge" newStateId="ACKNOWLEDGED" componentName="deliveryExceptionAcknowledgeAction"/>
        </manual-state>

        <manual-state id="ACKNOWLEDGED">
            <on eventId="investigate" newStateId="INVESTIGATING" componentName="deliveryExceptionInvestigateAction"/>
        </manual-state>

        <manual-state id="INVESTIGATING">
            <on eventId="resolve" newStateId="RESOLVED" componentName="deliveryExceptionResolveAction"/>
            <on eventId="escalate" newStateId="ESCALATED" componentName="deliveryExceptionEscalateAction"/>
        </manual-state>

        <manual-state id="ESCALATED">
            <on eventId="resolve" newStateId="RESOLVED" componentName="deliveryExceptionResolveFromEscalatedAction"/>
        </manual-state>

        <manual-state id="RESOLVED" meta-endState="true"/>
    </flow>
</states>
