<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="pricingRuleDefinitionFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="pricingRuleDefinitionSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="pricingRuleDefinitionApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="pricingRuleDefinitionRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="activate" newStateId="ACTIVE" componentName="pricingRuleDefinitionActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deactivate" newStateId="INACTIVE" componentName="pricingRuleDefinitionDeactivateAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="pricingRuleDefinitionDeprecateAction"/>
        </manual-state>

        <manual-state id="INACTIVE">
            <on eventId="activate" newStateId="ACTIVE" componentName="pricingRuleDefinitionReactivateAction"/>
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="pricingRuleDefinitionDeprecateFromInactiveAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
