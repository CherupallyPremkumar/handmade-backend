<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="routePlanFlow" default="true">
        <manual-state id="CREATED" initialState="true">
            <on eventId="assign" newStateId="ASSIGNED" componentName="routePlanAssignAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="routePlanCancelAction"/>
        </manual-state>

        <manual-state id="ASSIGNED">
            <on eventId="start" newStateId="IN_PROGRESS" componentName="routePlanStartAction"/>
        </manual-state>

        <manual-state id="IN_PROGRESS">
            <on eventId="complete" newStateId="COMPLETED" componentName="routePlanCompleteAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
