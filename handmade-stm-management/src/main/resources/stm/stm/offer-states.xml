<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="HM_OFFER_FLOW" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="offerSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="offerApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="offerRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="schedule" newStateId="SCHEDULED" componentName="offerScheduleAction"/>
            <on eventId="activate" newStateId="ACTIVE" componentName="offerActivateAction"/>
        </manual-state>

        <manual-state id="SCHEDULED">
            <on eventId="activate" newStateId="ACTIVE" componentName="offerActivateFromScheduledAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="offerCancelAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="pause" newStateId="PAUSED" componentName="offerPauseAction"/>
            <on eventId="expire" newStateId="EXPIRED" componentName="offerExpireAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="offerCancelFromActiveAction"/>
        </manual-state>

        <manual-state id="PAUSED">
            <on eventId="resume" newStateId="ACTIVE" componentName="offerResumeAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="offerCancelFromPausedAction"/>
        </manual-state>

        <manual-state id="EXPIRED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
