<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="HM_SELLER_VERIFICATION_FLOW" default="true">
        <manual-state id="INITIATED" initialState="true">
            <on eventId="submit" newStateId="PENDING" componentName="sellerVerificationSubmitAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="sellerVerificationCancelAction"/>
        </manual-state>

        <manual-state id="PENDING">
            <on eventId="verify" newStateId="VERIFYING" componentName="sellerVerificationVerifyAction"/>
        </manual-state>

        <manual-state id="VERIFYING">
            <on eventId="approve" newStateId="VERIFIED" componentName="sellerVerificationApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="sellerVerificationRejectAction"/>
            <on eventId="requiresReview" newStateId="MANUAL_REVIEW" componentName="sellerVerificationRequiresReviewAction"/>
        </manual-state>

        <manual-state id="MANUAL_REVIEW">
            <on eventId="approve" newStateId="VERIFIED" componentName="sellerVerificationApproveFromReviewAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="sellerVerificationRejectFromReviewAction"/>
        </manual-state>

        <manual-state id="REJECTED">
            <on eventId="retry" newStateId="INITIATED" componentName="sellerVerificationRetryAction"/>
        </manual-state>

        <manual-state id="VERIFIED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
