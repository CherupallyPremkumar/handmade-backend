<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="inboundShipmentItemFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="receive" newStateId="RECEIVED" componentName="inboundShipmentItemReceiveAction"/>
            <on eventId="damage" newStateId="DAMAGED" componentName="inboundShipmentItemDamageAction"/>
        </manual-state>

        <manual-state id="RECEIVED" meta-endState="true"/>
        <manual-state id="DAMAGED" meta-endState="true"/>
    </flow>
</states>
