<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="HM_PAYMENT_REFUND_TRANSACTION_FLOW" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="paymentRefundTransactionProcessAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="paymentRefundTransactionCancelAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="paymentRefundTransactionCompleteAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="paymentRefundTransactionFailAction"/>
        </manual-state>

        <manual-state id="FAILED">
            <on eventId="retry" newStateId="PENDING" componentName="paymentRefundTransactionRetryAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
