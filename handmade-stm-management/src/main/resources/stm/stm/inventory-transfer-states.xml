<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="inventoryTransferFlow" default="true">
        <manual-state id="CREATED" initialState="true">
            <on eventId="pick" newStateId="PICKING" componentName="inventoryTransferPickAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="inventoryTransferCancelAction"/>
        </manual-state>

        <manual-state id="PICKING">
            <on eventId="dispatch" newStateId="IN_TRANSIT" componentName="inventoryTransferDispatchAction"/>
        </manual-state>

        <manual-state id="IN_TRANSIT">
            <on eventId="receive" newStateId="RECEIVED" componentName="inventoryTransferReceiveAction"/>
            <on eventId="partialReceive" newStateId="PARTIALLY_RECEIVED" componentName="inventoryTransferPartialReceiveAction"/>
        </manual-state>

        <manual-state id="PARTIALLY_RECEIVED">
            <on eventId="receiveRemaining" newStateId="RECEIVED" componentName="inventoryTransferReceiveRemainingAction"/>
        </manual-state>

        <manual-state id="RECEIVED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
