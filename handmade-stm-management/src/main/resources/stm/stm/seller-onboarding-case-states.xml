<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="sellerOnboardingCaseFlow" default="true">
        <manual-state id="INITIATED" initialState="true">
            <on eventId="start" newStateId="IN_PROGRESS" componentName="sellerOnboardingCaseStartAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="sellerOnboardingCaseCancelAction"/>
        </manual-state>

        <manual-state id="IN_PROGRESS">
            <on eventId="submit" newStateId="SUBMITTED" componentName="sellerOnboardingCaseSubmitAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="sellerOnboardingCaseCancelFromProgressAction"/>
        </manual-state>

        <manual-state id="SUBMITTED">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="sellerOnboardingCaseReviewAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="requestInfo" newStateId="INFO_REQUESTED" componentName="sellerOnboardingCaseRequestInfoAction"/>
            <on eventId="approve" newStateId="APPROVED" componentName="sellerOnboardingCaseApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="sellerOnboardingCaseRejectAction"/>
        </manual-state>

        <manual-state id="INFO_REQUESTED">
            <on eventId="provideInfo" newStateId="UNDER_REVIEW" componentName="sellerOnboardingCaseProvideInfoAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="sellerOnboardingCaseCancelFromInfoRequestedAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="activate" newStateId="ACTIVE" componentName="sellerOnboardingCaseActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
