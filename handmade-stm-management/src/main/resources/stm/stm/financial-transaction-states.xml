<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="HM_FINANCIAL_TRANSACTION_FLOW" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="process" newStateId="PROCESSING" componentName="financialTransactionProcessAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="financialTransactionCompleteAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="financialTransactionFailAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="FAILED" meta-endState="true"/>
    </flow>
</states>
