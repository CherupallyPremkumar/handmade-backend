<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="orderLineFlow" default="true">
        <manual-state id="PENDING" initialState="true">
            <on eventId="allocate" newStateId="ALLOCATED" componentName="orderLineAllocateAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="orderLineCancelAction"/>
        </manual-state>

        <manual-state id="ALLOCATED">
            <on eventId="pick" newStateId="PICKED" componentName="orderLinePickAction"/>
            <on eventId="cancel" newStateId="CANCELLED" componentName="orderLineCancelFromAllocatedAction"/>
        </manual-state>

        <manual-state id="PICKED">
            <on eventId="pack" newStateId="PACKED" componentName="orderLinePackAction"/>
        </manual-state>

        <manual-state id="PACKED">
            <on eventId="ship" newStateId="SHIPPED" componentName="orderLineShipAction"/>
        </manual-state>

        <manual-state id="SHIPPED">
            <on eventId="deliver" newStateId="DELIVERED" componentName="orderLineDeliverAction"/>
        </manual-state>

        <manual-state id="DELIVERED">
            <on eventId="return" newStateId="RETURNED" componentName="orderLineReturnAction"/>
            <on eventId="complete" newStateId="COMPLETED" componentName="orderLineCompleteAction"/>
        </manual-state>

        <manual-state id="RETURNED" meta-endState="true"/>
        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="CANCELLED" meta-endState="true"/>
    </flow>
</states>
