<?xml version="1.0" encoding="UTF-8"?>
<states>

    <!-- Fraud Case Verification Flow -->
    <flow id="fraudCaseFlow" default="true">

        <manual-state id="OPEN" initialState="true">
            <on eventId="assign" newStateId="UNDER_REVIEW" componentName="assignInvestigatorAction"/>
            <on eventId="auto_close" newStateId="CLOSED" componentName="autoCloseFraudCaseAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="confirm_fraud" newStateId="FRAMED_CONFIRMED" componentName="confirmFraudAction"/>
            <on eventId="clear" newStateId="CLEARED" componentName="clearFraudCaseAction"/>
        </manual-state>

        <manual-state id="FRAUD_CONFIRMED"/>
        <manual-state id="CLEARED"/>
        <manual-state id="CLOSED"/>

    </flow>
    
</states>
