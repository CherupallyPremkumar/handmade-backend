<?xml version="1.0" encoding="UTF-8"?>
<states>
    <!-- Experiment Lifecycle -->
    <flow id="experimentFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="activate" newStateId="ACTIVE" componentName="experimentActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="pause" newStateId="PAUSED" componentName="experimentPauseAction"/>
            <on eventId="complete" newStateId="COMPLETED" componentName="experimentCompleteAction"/>
        </manual-state>

        <manual-state id="PAUSED">
            <on eventId="resume" newStateId="ACTIVE" componentName="experimentResumeAction"/>
            <on eventId="complete" newStateId="COMPLETED" componentName="experimentCompleteAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
    </flow>
</states>
