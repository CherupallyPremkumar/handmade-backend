<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="gdprRequestFlow" default="true">
        <manual-state id="SUBMITTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="gdprRequestReviewAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="gdprRequestApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="gdprRequestRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="process" newStateId="PROCESSING" componentName="gdprRequestProcessAction"/>
        </manual-state>

        <manual-state id="PROCESSING">
            <on eventId="complete" newStateId="COMPLETED" componentName="gdprRequestCompleteAction"/>
            <on eventId="fail" newStateId="FAILED" componentName="gdprRequestFailAction"/>
        </manual-state>

        <manual-state id="COMPLETED" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
        <manual-state id="FAILED" meta-endState="true"/>
    </flow>
</states>
