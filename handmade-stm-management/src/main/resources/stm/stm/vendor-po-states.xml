<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="vendorPOFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="SUBMITTED" componentName="vendorPOSubmitAction"/>
        </manual-state>

        <manual-state id="SUBMITTED">
            <on eventId="approve" newStateId="APPROVED" componentName="vendorPOApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="vendorPORejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="receive" newStateId="RECEIVED" componentName="vendorPOReceiveAction"/>
        </manual-state>

        <manual-state id="RECEIVED" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
    </flow>
</states>
