<?xml version="1.0" encoding="UTF-8"?>
<states>

    <!-- Content Lifecycle -->
    <flow id="contentFlow" default="true">

        <manual-state id="DRAFT" initialState="true">
            <on eventId="publish" newStateId="PUBLISHED" componentName="publishContentAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="archive" newStateId="ARCHIVED" componentName="archiveContentAction"/>
            <on eventId="unpublish" newStateId="DRAFT" componentName="unpublishContentAction"/>
        </manual-state>

        <manual-state id="ARCHIVED">
            <on eventId="restore" newStateId="DRAFT" componentName="restoreContentAction"/>
        </manual-state>

    </flow>
    
</states>
