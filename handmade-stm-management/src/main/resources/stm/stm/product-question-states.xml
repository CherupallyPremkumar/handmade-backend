<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="productQuestionFlow" default="true">
        <manual-state id="SUBMITTED" initialState="true">
            <on eventId="review" newStateId="UNDER_REVIEW" componentName="productQuestionReviewAction"/>
            <on eventId="publish" newStateId="PUBLISHED" componentName="productQuestionPublishAction"/>
        </manual-state>

        <manual-state id="UNDER_REVIEW">
            <on eventId="approve" newStateId="PUBLISHED" componentName="productQuestionApproveAction"/>
            <on eventId="reject" newStateId="REJECTED" componentName="productQuestionRejectAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="answer" newStateId="ANSWERED" componentName="productQuestionAnswerAction"/>
            <on eventId="unpublish" newStateId="UNPUBLISHED" componentName="productQuestionUnpublishAction"/>
        </manual-state>

        <manual-state id="ANSWERED">
            <on eventId="close" newStateId="CLOSED" componentName="productQuestionCloseAction"/>
        </manual-state>

        <manual-state id="UNPUBLISHED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="productQuestionRepublishAction"/>
        </manual-state>

        <manual-state id="CLOSED" meta-endState="true"/>
        <manual-state id="REJECTED" meta-endState="true"/>
    </flow>
</states>
