<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="approve" meta-bodyType="com.handmade.ecommerce.product.dto.ApproveProductPayload"/>
    <event-information eventId="discontinue" meta-bodyType="com.handmade.ecommerce.product.dto.DiscontinueProductPayload"/>
    <event-information eventId="publish" meta-bodyType="com.handmade.ecommerce.product.dto.PublishProductPayload"/>
    <event-information eventId="reject" meta-bodyType="com.handmade.ecommerce.product.dto.RejectProductPayload"/>
    <event-information eventId="republish" meta-bodyType="com.handmade.ecommerce.product.dto.RepublishProductPayload"/>
    <event-information eventId="submit" meta-bodyType="com.handmade.ecommerce.product.dto.SubmitProductPayload"/>
    <event-information eventId="unpublish" meta-bodyType="com.handmade.ecommerce.product.dto.UnpublishProductPayload"/>

    <flow id="HM_PRODUCT_FLOW" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="com.handmade.ecommerce.product.service.cmds.SubmitProductAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="com.handmade.ecommerce.product.service.cmds.ApproveProductAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="com.handmade.ecommerce.product.service.cmds.RejectProductAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="publish" newStateId="PUBLISHED" componentName="com.handmade.ecommerce.product.service.cmds.PublishProductAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="unpublish" newStateId="UNPUBLISHED" componentName="com.handmade.ecommerce.product.service.cmds.UnpublishProductAction"/>
            <on eventId="discontinue" newStateId="DISCONTINUED" componentName="com.handmade.ecommerce.product.service.cmds.DiscontinueProductAction"/>
        </manual-state>

        <manual-state id="UNPUBLISHED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="com.handmade.ecommerce.product.service.cmds.RepublishProductAction"/>
            <on eventId="discontinue" newStateId="DISCONTINUED" componentName="com.handmade.ecommerce.product.service.cmds.DiscontinueProductAction"/>
        </manual-state>

        <manual-state id="DISCONTINUED" meta-endState="true"/>
    </flow>
</states>
