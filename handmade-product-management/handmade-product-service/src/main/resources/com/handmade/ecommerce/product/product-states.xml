<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="productFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="submit" newStateId="REVIEW" componentName="productSubmitAction"/>
        </manual-state>

        <manual-state id="REVIEW">
            <on eventId="approve" newStateId="APPROVED" componentName="productApproveAction"/>
            <on eventId="reject" newStateId="DRAFT" componentName="productRejectAction"/>
        </manual-state>

        <manual-state id="APPROVED">
            <on eventId="publish" newStateId="PUBLISHED" componentName="productPublishAction"/>
        </manual-state>

        <manual-state id="PUBLISHED">
            <on eventId="unpublish" newStateId="UNPUBLISHED" componentName="productUnpublishAction"/>
            <on eventId="discontinue" newStateId="DISCONTINUED" componentName="productDiscontinueAction"/>
        </manual-state>

        <manual-state id="UNPUBLISHED">
            <on eventId="republish" newStateId="PUBLISHED" componentName="productRepublishAction"/>
            <on eventId="discontinue" newStateId="DISCONTINUED" componentName="productDiscontinueFromUnpublishedAction"/>
        </manual-state>

        <manual-state id="DISCONTINUED" meta-endState="true"/>
    </flow>
</states>
