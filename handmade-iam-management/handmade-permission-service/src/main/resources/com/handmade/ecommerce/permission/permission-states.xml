<?xml version="1.0" encoding="UTF-8"?>
<states>
    <event-information eventId="activate" meta-bodyType="com.handmade.ecommerce.iam.dto.ActivatePermissionPayload"/>
    <event-information eventId="deactivate" meta-bodyType="com.handmade.ecommerce.iam.dto.DeactivatePermissionPayload"/>
    <event-information eventId="deprecate" meta-bodyType="com.handmade.ecommerce.iam.dto.DeprecatePermissionPayload"/>

    <flow id="permissionFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="activate" newStateId="ACTIVE" componentName="com.handmade.ecommerce.permission.service.cmds.ActivatePermissionAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="com.handmade.ecommerce.permission.service.cmds.DeprecatePermissionAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
