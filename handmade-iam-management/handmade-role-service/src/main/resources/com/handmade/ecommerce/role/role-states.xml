<?xml version="1.0" encoding="UTF-8"?>
<states>
    <flow id="roleFlow" default="true">
        <manual-state id="DRAFT" initialState="true">
            <on eventId="activate" newStateId="ACTIVE" componentName="roleActivateAction"/>
        </manual-state>

        <manual-state id="ACTIVE">
            <on eventId="deprecate" newStateId="DEPRECATED" componentName="roleDeprecateAction"/>
        </manual-state>

        <manual-state id="DEPRECATED" meta-endState="true"/>
    </flow>
</states>
